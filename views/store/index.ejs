<%- include('../partials/head') %>
</head>
<body class="bg-gray-100 min-h-screen flex flex-col">

  <!-- Navigation -->
  <%- include('../partials/nav') %>

  <!-- Hero Section -->
  <section class="bg-green-500 text-white text-center py-20">
    <h1 class="text-4xl font-bold">Compassionate Home Health Care Services</h1>
    <p class="mt-4 text-lg">Providing professional, personalized, and high-quality care at your doorstep.</p>
    <a href="/contact" class="mt-6 inline-block bg-white text-green-500 font-semibold px-6 py-2 rounded-lg shadow-md hover:bg-gray-200">Get In Touch</a>
  </section>

  <!-- Services Section -->
  <section class="container mx-auto p-6">
    <h2 class="text-3xl font-bold text-gray-800 text-center mb-6">Our Services</h2>
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
      <div class="bg-white p-6 shadow-md rounded-lg">
        <h3 class="text-xl font-semibold text-green-600">Personal Care</h3>
        <p class="text-gray-600 mt-2">Assistance with bathing, grooming, and daily activities to ensure comfort.</p>
      </div>
      <div class="bg-white p-6 shadow-md rounded-lg">
        <h3 class="text-xl font-semibold text-green-600">Skilled Nursing</h3>
        <p class="text-gray-600 mt-2">Professional nursing care, wound management, and medication administration.</p>
      </div>
      <div class="bg-white p-6 shadow-md rounded-lg">
        <h3 class="text-xl font-semibold text-green-600">Therapy Services</h3>
        <p class="text-gray-600 mt-2">Physical, occupational, and speech therapy to aid in recovery.</p>
      </div>
    </div>
  </section>

  <!-- Why Choose Us -->
  <section class="bg-blue-50 py-10">
    <div class="container mx-auto text-center">
      <h2 class="text-3xl font-bold text-gray-800">Why Choose Us?</h2>
      <p class="text-gray-600 mt-4">We provide expert care with compassion, ensuring comfort and dignity for your loved ones.</p>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mt-6">
        <div class="p-6 bg-white shadow-md rounded-lg">
          <h3 class="text-xl font-semibold text-green-600">Experienced Staff</h3>
          <p class="text-gray-600 mt-2">Our caregivers are trained and certified professionals.</p>
        </div>
        <div class="p-6 bg-white shadow-md rounded-lg">
          <h3 class="text-xl font-semibold text-green-600">24/7 Support</h3>
          <p class="text-gray-600 mt-2">We are always available for emergency and scheduled care.</p>
        </div>
        <div class="p-6 bg-white shadow-md rounded-lg">
          <h3 class="text-xl font-semibold text-green-600">Affordable Care</h3>
          <p class="text-gray-600 mt-2">Quality healthcare at reasonable rates, covered by most insurance plans.</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Contact Section -->
  <section class="container mx-auto text-center py-10">
    <h2 class="text-3xl font-bold text-gray-800">Get in Touch</h2>
    <p class="text-gray-600 mt-2">Need home health care services? Contact us today!</p>
    <a href="/contact" class="mt-4 inline-block bg-green-500 text-white font-semibold px-6 py-2 rounded-lg shadow-md hover:bg-green-600">Contact Us</a>
  </section>

</body>
</html>
